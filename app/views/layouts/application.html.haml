%html
%head
    %title De Que U
  
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
  
    = stylesheet_link_tag 'https://bootswatch.com/cerulean/bootstrap.min.css'
    = javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js'
  
    = csrf_meta_tags

%body

    = render 'layouts/navbar'

    .container
        .row
            .col-md-10.col-md-offset-1
                - flash.each do |name, msg|
                    - if name == "alert"
                        = content_tag(:div, msg, class: "alert alert-danger")
                    - elsif name == "notice"
                        = content_tag(:div, msg, class: "alert alert-success")
                    - else
                        = content_tag :div, msg, class: "alert alert-#{name}"

        = yield