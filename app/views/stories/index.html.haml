.col-md-12
    .row
        .panel.-panel-default
            .panel-body
                
                .row
                    .col-md-2
                        %h3 Categorias
                        
                        %ul.list-group
                            = link_to "Todos", qp2_path(category: "Todos"), class: 'list-group-item'
                            - @categories.each do |c|
                                = link_to c.name, qp2_path(category: c.name), class: 'list-group-item'
                        
                        - if ( can? :manage, :categories )
                            .row.text-center
                                = link_to categories_path do
                                    %span.glyphicon.glyphicon-th-list 
                                    Manejar Categorias     
                                
                    .col-md-9
                        - if params[:category].blank?
                            %h3 Todos
                        - else
                            %h3= params[:category]
                    
                        .row
                            .col-md-12
                            
                                / Search and other buttons
                                .row
                                    .col-md-7
                                        = render 'search'
                                    .col-md-5
                                        - if (can? :create, @story)
                                            = link_to new_story_path, class: 'btn btn-success btn-sm' do
                                                %span.glyphicon.glyphicon-pencil
                                                Postear Historia
                                    
                                        .btn-group.btn-group-sm.pull-right
                                            = link_to qp2_path(category: params[:category]), class: 'btn btn-default' do
                                                %span.glyphicon.glyphicon-fire
                                                Populares
                                                
                                            = link_to qp2_path(category: params[:category]), class: 'btn btn-default' do
                                                %span.glyphicon.glyphicon-time
                                                Recientes
                                %br
                            
                                - if @stories.empty?
                                    %p.text-center No hay historias que mostrar.
                                    
                                - else
                            
                                    / Show all stories
                                    .table-responsive
                                        %table.table.table-striped.table-hover
                                            %thead
                                                %tr
                                                    %th.text-center Titulo
                                                    %th.text-center Autor
                                                    %th.text-center Categoria
                                                    %th.text-center Fecha
                                                    %th.text-center
                                                        %span.glyphicon.glyphicon-heart
                                                    %th.text-center
                                                        %span.glyphicon.glyphicon-comment
                                            %tbody
                                                - @stories.each do |story|
                                                    %tr
                                                        %td.text-center
                                                            = link_to truncate(story.title, :length => 30), story
                                                        %td.text-center= story.user.username
                                                        %td.text-center= Category.find(story.category_id).name
                                                        %td.text-center
                                                            Hace
                                                            =time_ago_in_words(story.created_at)
                                                        %td.text-center= story.get_upvotes.size
                                                        %td.text-center= story.comments.count
                                    
                                    / Pagination
                                    .row.text-center
                                        = will_paginate @stories, renderer: BootstrapPagination::Rails
                    
                        %hr