.col-md-6.col-md-offset-3
    .row
        .panel.-panel-default
            .panel-body
                %h3= @user.username
                
                .row
                    .col-md-2
                        = image_tag "#{@user.gender}.png", class: 'media-object img-circle'
                    .col-md-10
                        %p
                            %strong Genero:
                            = @user.gender
                        %p
                            %strong Miembro desde:
                            = @user.created_at.to_s.to_time.strftime('%B %e %Y')
                        %p
                            %strong Historias:
                            = @user.stories.count
                        %p
                            %strong Comentarios:
                            = @user.comments.count
                            